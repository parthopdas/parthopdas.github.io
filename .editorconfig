# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
tab_width = 4

[*.{js,ts,fs,json}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{html,xml}]
indent_size = 2
tab_width = 2

[*.yml]
indent_size = 2
tab_width = 2
